
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow logged-in users to read/write their own user document.
    // Allow any authenticated user (e.g., admin) to read all user documents.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logged-in users to interact with rides.
    match /rides/{rideId} {
      allow read, write: if request.auth != null;
    }

    // Allow anyone to read ads, but only authenticated users to create them.
    match /advertisements/{adId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow only authenticated users to create wallet requests.
    match /walletRequests/{requestId} {
      allow create: if request.auth != null;
      // Admins should be able to update/read, this needs a proper admin role check later
      allow read, update: if request.auth != null;
    }

    // Allow only authenticated users to manage their own chat messages.
    // Admins might need broader access, which requires role-based rules.
    match /chats/{chatId}/messages/{messageId} {
        allow read, create: if request.auth != null;
    }

    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
