rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'users' collection
    match /users/{userId} {
      // READ: Allow authenticated users to get their own doc, or any doc if they are an admin.
      // LIST: Allow any authenticated user to list users (e.g., for the admin panel).
      allow read: if request.auth != null;
      
      // WRITE: Allow users to create their own user document and update it.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Rules for the 'rides' collection
    match /rides/{rideId} {
        // READ: Allow customer who created or assigned driver to read. Admins can read all.
        // LIST: Allow admins to list all rides.
        allow read: if request.auth != null;

        // WRITE: Allow authenticated users to create a ride.
        // Allow customer or driver to update the ride document.
        allow create: if request.auth != null;
        allow update: if request.auth != null && (request.auth.uid == resource.data.customerId || request.auth.uid == resource.data.driverId);
    }
    
    // Rules for the 'walletRequests' collection
    match /walletRequests/{requestId} {
        // READ: Allow admins to read/list requests.
        allow read: if request.auth != null;
        
        // WRITE: Allow authenticated users to create a request.
        // Allow only admins to update (approve/reject) - for now, any auth user can.
        allow create: if request.auth != null;
        allow update: if request.auth != null;
    }
  }
}
