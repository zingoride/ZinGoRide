
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to:
    // - Create their own user document upon signup
    // - Read, update, or delete their own user document
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Rides:
    // - Any authenticated user can create a ride request.
    // - The customer who created it or the driver assigned to it can read/update it.
    match /rides/{rideId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (request.auth.uid == resource.data.customerId || request.auth.uid == resource.data.driverId);
    }
    
    // Wallet Requests:
    // - Any authenticated user can create a wallet top-up request.
    // - Only an admin (or server) should approve them, so we restrict updates/deletes.
    // - The user who created the request can read it to see the status.
    match /walletRequests/{requestId} {
        allow create: if request.auth != null;
        allow read: if request.auth != null && request.auth.uid == resource.data.userId;
        // Note: Updates (approvals/rejections) should be handled by a secure admin/backend environment.
        allow update, delete: if false; 
    }

    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
