
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    // --- COLLECTIONS ---

    // Configs can be read by anyone, but only written by Admin
    match /configs/{docId} {
      allow read: if isSignedIn();
      allow write: if request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }

    // Users can be read by anyone signed in.
    // Users can only update their own document. Admin can write to any.
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if (isSignedIn() && request.auth.uid == userId) || request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }

    // Rides can be read by any signed-in user.
    // Writes are more specific.
    match /rides/{rideId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn(); // Any signed-in user can create a ride request
      allow update, delete: if (isSignedIn() && (request.auth.uid == resource.data.customerId || request.auth.uid == resource.data.driverId)) || request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }

    // Chats can only be accessed by participants or Admin
    match /chats/{chatId}/{message=**} {
       allow read, write: if (isSignedIn() && request.auth.uid in chatId.split('_')) || request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }
    
    // Wallet Requests can be created by any signed-in user.
    // Only Admin can read or update them.
    match /walletRequests/{reqId} {
        allow create: if isSignedIn();
        allow read, update, delete: if request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }

    // Payout requests can only be managed by Admin
    match /payoutRequests/{reqId} {
       allow read, write: if request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }
    
    // Advertisements can be read by anyone, written only by Admin
    match /advertisements/{adId} {
        allow read: if isSignedIn();
        allow write: if request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }
    
    // Notifications and Wallet Transactions are Admin-only write
    match /notifications/{notifId} {
        allow write: if request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }
    match /walletTransactions/{transId} {
         allow write: if request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
