rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }

    // Grant Admin full access to everything, always.
    // This rule is checked first. If the user is admin, no other rules are evaluated.
    match /{document=**} {
      allow read, write: if request.auth.uid == '9xLq5tLz9oYy6zDm1iIOnV5S9373';
    }

    // Rules for General Users (Non-Admins)

    // Allow any signed-in user to read any document.
    // This is required for features like the live map (to see other users),
    // ride status (customer seeing driver and vice versa), and fetching configs.
    match /{document=**} {
      allow read: if isSignedIn();
    }
    
    // Allow any signed-in user to create new documents in any collection.
    // This is necessary for booking rides, creating wallet requests, etc.
    // More specific write rules below will handle updates and deletes.
    match /{collection}/{docId} {
        allow create: if isSignedIn();
    }

    // USERS Collection:
    // Allow users to update only their own document.
    match /users/{userId} {
      allow update: if isSignedIn() && request.auth.uid == userId;
    }

    // RIDES Collection:
    // Allow the customer or the assigned driver to update or cancel the ride.
    match /rides/{rideId} {
      allow update: if isSignedIn() && (request.auth.uid == resource.data.customerId || request.auth.uid == resource.data.driverId);
    }
  }
}
