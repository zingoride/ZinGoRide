
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write for any authenticated user.
    // This is a temporary, permissive rule to unblock development.
    // We will build more secure rules incrementally from here.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
