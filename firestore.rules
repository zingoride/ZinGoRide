
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // =================================
    // Helper Functions
    // =================================
    function isSignedIn() {
      return request.auth != null;
    }

    function isUser(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function isAdmin() {
      // The admin's UID must be hardcoded here for security.
      return isSignedIn() && request.auth.uid == 'xMGCQ5b3oic287oK9yTzKSgyTkj2';
    }
    
    function isUserInChat(chatId) {
      return isSignedIn() && request.auth.uid.matches(chatId);
    }
    
    // =================================
    // Collection Rules
    // =================================

    // Users Collection
    // Admins can read/list/write all users.
    // Users can only read/update their own profile.
    match /users/{userId} {
      allow get: if isUser(userId) || isAdmin();
      allow list: if isAdmin();
      allow update: if isUser(userId) || isAdmin();
      // Allow create for anyone (for signup)
      allow create: if true; 
      allow delete: if isAdmin();
    }

    // Rides Collection
    // Admins can read/list/write all rides.
    // Authenticated users can create rides.
    // The assigned customer or driver can read/update their own ride.
    match /rides/{rideId} {
      allow get: if isSignedIn() || isAdmin(); // Customer/driver check is implicit in app logic
      allow list: if isAdmin();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() || isAdmin();
      
      // Chat messages within a ride
      match /messages/{messageId} {
        allow read, write: if isSignedIn(); // Simplified for now
      }
    }

    // Wallet Requests Collection
    // Admins can read/list/write all requests.
    // Users can create their own requests.
    match /walletRequests/{requestId} {
      allow get, list, update, delete: if isAdmin();
      allow create: if isSignedIn();
    }
    
    // Payout Requests Collection
    // Only admins can access these.
    match /payoutRequests/{payoutId} {
       allow read, list, create, update, delete: if isAdmin();
    }
    
    // Notifications Collection
    // Only admins can access these.
    match /notifications/{notificationId} {
        allow read, list, create, update, delete: if isAdmin();
    }
    
    // Chats Collection (for Admin-User chat)
    match /chats/{chatId}/{message=**} {
      allow read, write: if isAdmin() || isUserInChat(chatId);
    }
  }
}
